{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": ["airbnb"],
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "global-require": 0,
    "comma-dangle": ["error", "never"],
    "semi": ["error", "always"],
    "no-console": 0,
    "import/no-unresolved": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prefer-stateless-function": 0
  }
}